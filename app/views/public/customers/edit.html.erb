<div class="container">
  <div class="row">
    <h4 class="col-md-3 bg-light">会員情報編集画面</h3>
  </div>
  <div class="row">
    <div class="col-md-6">
    <%= form_with model:@customer, url:customers_path, method: :patch do |f| %>
      <div class="form-group row">
        <label class="col-md-3">氏名</label>
        <%= f.text_field :last_name %><%= f.text_field :first_name %>
      </div>
      <div class="form-group row">
        <label class="col-md-3">フリガナ</label>
        <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
      </div>
      <div class="form-group row">
        <label class="col-md-3">郵便番号</label>
        <%= f.text_field :postcode %>
      </div>
      <div class="form-group row">
         <label class="col-md-3">住所</label>
         <%= f.text_field :address %>
      </div>
      <div class="form-group row">
         <label class="col-md-3">電話番号</label>
         <%= f.text_field :phone_number %>
      </div>
      <div class="form-group row">
         <label class="col-md-3">メールアドレス</label>
         <%= f.text_field :email %>
      </div>
      <div class="form-group row">
        <div class="offset-md-3">
          <%= f.submit '編集内容を保存', class:"btn btn-success" %>
          <%= f.submit '退会する', class:"btn btn-sm btn-danger destroy_book_77113" %>
      </div>
    <% end %>
    </div>
  </div>
</div>