<div class="container">
  <div class="row">
    <h3>商品一覧</h3>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <%= link_to item_path(item.id) do %>
      <div class="pr-3 pb-3">
        <%= image_tag item.image, size: "250x200" %>
      </div>
      <div>
        <%= item.name %>
      </div>
      <div>
        ¥<%= item.add_tax_price_without_tax %>
      </div>
      <% end %>
    <% end %>
  </div>
</div>