<div class="container px-5 px-sm-0">
  <div class="flex-column">
    <div class="col-md-6">
      <h2 class="bg-light text-brak">ジャンル一覧・追加</h2>
      <div class="form-inline">
      <%= form_with model: [:admin, @genre] do |f| %>
        <label for="name">ジャンル名</label>
          <%= f.text_field :name %>
          <%= f.submit '新規登録', class:"btn btn-primary btn-success" %>
      <% end %>
      </div>
    </div>
   <div class="col-md-3">
     <table class="table">
       <thead class="thead-light">
         <tr>
           <th>
             ジャンル
           </th>
           <th colspan="3"></th>
         </tr>
       </thead>
       <tbody>
       <% @genres.each do |genre| %>
         <tr>
           <td>
             <%= genre.name %>
           </td>
           <td>
             <%=link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %>
           </td>
         </tr>
       <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>