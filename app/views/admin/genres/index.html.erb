<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3 class="bg-light text-brak">ジャンル一覧・追加</h2>
      <div id="error_explanation">
        <% if @genre.errors.any? %>
          <%= @genre.errors.count %>件のエラーが発生しました
         <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
         </ul>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div>
      <%= form_with model: [:admin, @genre] do |f| %>
        <label>ジャンル名</label>
          <%= f.text_field :name %>
          <%= f.submit '新規登録', class:"btn btn-primary btn-success" %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row">
   <div class="col-md-3">
     <table class="table">
       <thead class="thead-light">
         <tr>
           <th>
             ジャンル
           </th>
           <th colspan="3"></th>
         </tr>
       </thead>
       <tbody>
       <% @genres.each do |genre| %>
         <tr>
           <td>
             <%= genre.name %>
           </td>
           <td>
             <%=link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %>
           </td>
         </tr>
       <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>