<div class="container">
  <div class="row">
      <h3 class="col-md-3 bg-light">ジャンル編集</h1>
  </div>
  <div class="row">
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
      <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
      <%= form_with model: [:admin, @genre] do |f| %>
        <label>ジャンル名</label>
        <%= f.text_field :name %>
        <%= f.submit '変更を保存', class:"btn btn-success" %>
      <% end %>
  </div>
    </div>
  </div>
</div>