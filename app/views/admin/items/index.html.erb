<h3>商品一覧</h3>
<div class="container px-5 px-sm-0 mt-5">
<table class="table table-hover table-inverse">
  <thead class="thead-light">
    <tr>
      <th>id</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price_without_tax %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.sales_status %>販売中
        <% else %>販売停止中
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>