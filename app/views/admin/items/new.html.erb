<div class="container">
  <div class="row">
    <h3 class="col-md-3 offset-md-2 bg-light">商品新規登録</h1>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
    <%= form_with model: [:admin, @item] do |f| %>
      <div class="form-group row">
        <label class="col-md-3">商品画像</label>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group row">
        <label class="col-md-3">商品名</label>
          <%= f.text_field :name %>
      </div>
      <div class="form-group row">
        <label class="col-md-3">商品説明</label>
          <%= f.text_area :explanation %>
      </div>
      <div class="form-group row">
        <label class="col-md-3">税抜価格</label>
          <%= f.text_field :price_without_tax %>円
      </div>
      <div class="form-group row">
        <label class="col-md-3">ジャンル</label>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>
      <div class="form-group row">
        <label class="col-md-3">販売ステータス</label>
          <%= f.radio_button :sales_status, "true" %>
          <%= f.label :sales_status, "販売中" %>
          <%= f.radio_button :sales_status, "false" %>
          <%= f.label :sales_status, "販売停止中" %>
      </div>
       <div class="form-group row">
         <div class="offset-md-3">
           <%= f.submit '新規登録', class:"btn btn-success" %>
         </div>
       </div>
    <% end %>
    </div>
  </div>
</div>