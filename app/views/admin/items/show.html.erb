<div class="container">
 <div class="row">
  <div class="col-md-3">
    <%= image_tag @item.image, size: "200x200" %>
  </div>
  <div class="col-md-8 offset-md-1">
    <p>商品名：<%= @item.name %></p>
    <p>商品説明：<%= @item.explanation %></p>
    <p>ジャンル：<%= @item.genre.name %></p>
    <p>税込価格(税抜価格)：<%= @item.add_tax_price_without_tax %>(<%= @item.price_without_tax %>)</p>
    <p>販売ステータス：
     <% if @item.sales_status %>販売中
     <% else %>販売停止中
     <% end %>
    </p>
    </div>
    <div class="col text-center">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>
    </div>
  </div>
</div>